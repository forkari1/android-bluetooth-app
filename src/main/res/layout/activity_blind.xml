<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BlindSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="버튼"
            android:textColor="#b4c7e7"
            android:textSize="23dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/BlindVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="음성"
            android:textColor="#b4c7e7"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BlindReservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="예약"
            android:textColor="#b4c7e7"
            android:textSize="23dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

        <TextView
            android:id="@+id/color1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="#fa9c7e" />


        <TextView
            android:id="@+id/color2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="#b4c7e7" />

        <TextView
            android:id="@+id/color3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="#b4c7e7" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <Button
            android:id="@+id/blind5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/p5" />

        <Button
            android:id="@+id/blind4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/p4" />

        <Button
            android:id="@+id/blind3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/p3" />

        <Button
            android:id="@+id/blind2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/p2" />

        <Button
            android:id="@+id/blind1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/p1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/v1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/voice1" />


        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="출력결과"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Reservation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TimePicker
                android:id="@+id/tp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner">

            </TimePicker>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/ReservationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약하기"
                android:visibility="visible" />

            <Button
                android:id="@+id/cancleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소하기"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="예약 데이터" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/WeatherSwitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"></Switch>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="현재 위치 찾기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CurrentLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재위치" />


            <TextView
                android:id="@+id/weatherResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="안녕하세요" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>